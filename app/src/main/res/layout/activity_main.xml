<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/main_back"
    tools:context="com.example.gpsk1.triper.MainActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/main" />

    <RadioGroup
        android:id="@+id/loginActivity_radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="110dp">


        <RadioButton
            android:id="@+id/loginActivity_radio_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@layout/radio"
            android:text="  관광객(tourist)" />

        <RadioButton
            android:id="@+id/loginActivity_radio_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:button="@layout/radio"
            android:text="  가이드(Guide)" />

    </RadioGroup>

    <EditText
        android:layout_marginTop="30dp"
        android:id="@+id/loginActivity_edittext_id"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_edittext"
        android:hint="아이디"
        android:padding="5dip" />
    <EditText
        android:id="@+id/loginActivity_edittext_password"
        android:layout_marginTop="5dp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:padding="5dip"
        android:background="@drawable/round_edittext"
        android:hint="패스워드"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="350dp"
        android:layout_height="wrap_content">
        <Button
            android:text="회원가입"
            android:textColor="#FFFFFF"
            android:layout_marginTop="10dp"
            android:id="@+id/loginActivity_button_sign"
            android:background="@drawable/round_button"
            android:layout_width="170dp"
            android:layout_height="wrap_content" />

        <Button
            android:layout_marginLeft="5dp"
            android:text="로그인"
            android:textColor="#FFFFFF"
            android:id="@+id/loginActivity_button_login"
            android:layout_marginTop="10dp"
            android:layout_width="170dp"
            android:background="@drawable/round_button"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
